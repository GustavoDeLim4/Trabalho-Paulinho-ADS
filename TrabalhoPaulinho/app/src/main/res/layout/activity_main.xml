<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/Nome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome"/>

    <EditText
        android:id="@+id/Email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"/>

    <EditText
        android:id="@+id/Idade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Idade"
        android:inputType="number"/>

    <EditText
        android:id="@+id/Disciplina"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Disciplina"/>

    <EditText
        android:id="@+id/Nota1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nota 1ยบ Bimestre"
        android:inputType="numberDecimal"/>

    <EditText
        android:id="@+id/Nota2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nota 2ยบ Bimestre"
        android:inputType="numberDecimal"/>

    <Button
        android:id="@+id/btEnviar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enviar"/>

    <Button
        android:id="@+id/btLimpar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Limpar"/>

    <TextView
        android:id="@+id/Erro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FF0000"/>

    <TextView
        android:id="@+id/Resumo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
